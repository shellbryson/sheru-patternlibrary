<div class="su-navigation">

  <nav class="su-navigation__wrapper">

    {{site-header-brand}}

    <ol class="su-navigation__primary">
      <li class="su-navigation__primary-tile animation-fadein">
        <a href="/code-tips" class="su-navigation__primary-tile-link">Code</a>
      </li>
      <li class="su-navigation__primary-tile animation-fadein">
        <a href="/blog" class="su-navigation__primary-tile-link">Projects</a>
      </li>
      <li class="su-navigation__primary-tile animation-fadein">
        <a href="/projects" class="su-navigation__primary-tile-link">Blog</a>
      </li>
      <li class="su-navigation__primary-tile animation-fadein js-toggleMenu">
        <button class="su-navigation__button"
          aria-haspopup="true"
          aria-owns="navigation-secondary"
          aria-controls="navigation-secondary">
          <span class="sr-only">Toggle expanded navigation</span>
          <i class="fa fa-th-large su-display-small"></i>
          <i class="fa fa-bars su-display-medium"></i>
        </button>
      </li>
      <li class="su-navigation__primary-tile su-navigation__primary-tile--small animation-fadein js-toggleSearch">
        <button class="su-navigation__button"
          aria-haspopup="true"
          aria-owns="navigation-search"
          aria-controls="navigation-search">
          <span class="sr-only">Toggle search form</span>
          <i class="fa fa-search su-display-medium"></i>
        </button>
      </li>
    </ol>

    {{navigation-search}}

    <div class="su-navigation__scroll">

      <ol class="su-navigation__secondary js-navigation" aria-expanded="false" aria-hidden="true" id="navigation-secondary">
        {{#each secondaryNav}}

        <li class="su-navigation__tile-wrapper">
          {{>navigation-tile ctxTile}}
        </li>

        {{/each}}
      </ol>

    </div>

  </nav>
</div>
